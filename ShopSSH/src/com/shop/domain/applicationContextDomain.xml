<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context" 	
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context.xsd">
	
	<!-- 配置各种实体类 -->
	<bean name="product" class="com.shop.domain.Product" scope="prototype"></bean>	
	<bean name="category" class="com.shop.domain.Category" scope="prototype"></bean>	
	<bean name="user" class="com.shop.domain.User" scope="prototype"></bean>	
	<bean name="order" class="com.shop.domain.Order" scope="prototype"></bean>	
	<bean name="orderItem" class="com.shop.domain.OrderItem" scope="prototype"></bean>	
	<bean name="cartItem" class="com.shop.domain.CartItem" scope="prototype"></bean>
	<bean name="cart" class="com.shop.domain.Cart" scope="prototype"></bean>
</beans>